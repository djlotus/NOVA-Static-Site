{
   "name": "static-site-generator",
   "version": "1.1.0",
   "description": "static site generator",
   "main": "index.js",
   "dependencies": {},
   "devDependencies": {
      "browser-sync": "^2.26.14",
      "clean-css-cli": "^4.3.0",
      "concurrently": "^5.3.0",
      "html-includes": "^4.3.3",
      "sass": "^1.32.5",
      "html": "html-includes --src src --dest dist --watch",
      "build:html": "html-includes --src src --dest dist",
      "sass": "sass src/stylesheets/main.scss:dist/css/main.css --watch --style expanded --error-css",
      "build:sass": "sass src/stylesheets/main.scss:dist/css/main.css --style compressed",
      "cleanCss": "cleancss -o dist/css/main.min.css dist/css/main.css",
      "browser": "browser-sync start --server 'dist' --files 'dist'",
      "watch": "concurrently -k \"npm run html\" \"npm run sass\" \"npm run browser\"",
      "build": "npm run build:html && npm run build:sass && npm run cleanCss"
   },
   "scripts": {
      "test": "echo \"Error: no test specified\" && exit 1"
   },
   "author": "james murphy",
   "license": "ISC",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/djlotus/Static-Site-Generator.git"
   },
   "bugs": {
      "url": "https://github.com/djlotus/Static-Site-Generator/issues"
   },
   "homepage": "https://github.com/djlotus/Static-Site-Generator#readme"
}
